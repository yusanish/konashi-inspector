{
  "name": "konashi-inspector",
  "version": "0.0.1",
  "description": "",
  "scripts": {
    "start": "parcel src/index.html --open",
    "build": "rm docs/*; parcel build src/index.html --out-dir docs/ --public-url='/konashi-inspector'; touch docs/.nojekyll",
    "test": "jest"
  },
  "author": "Yusaku Nishiwaki",
  "license": "Apache-2.0",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.12.1",
    "@ux-xu/konashi-web-bluetooth": "^0.2.0",
    "bulma": "^0.8.0",
    "preact": "^10.3.4",
    "ress": "^2.0.4",
    "rfs": "^9.0.2"
  },
  "devDependencies": {
    "@types/jest": "^25.1.4",
    "@types/web-bluetooth": "0.0.5",
    "jest": "^25.1.0",
    "parcel-bundler": "^1.12.4",
    "sass": "^1.26.3",
    "ts-jest": "^25.2.1",
    "typescript": "^3.8.3"
  },
  "jest": {
    "preset": "ts-jest",
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest"
    },
    "testMatch": [
      "<rootDir>/src/test/*.test.tsx"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "moduleNameMapper": {
      "^react$": "preact/compat",
      "^react-dom/test-utils$": "preact/test-utils",
      "^react-dom$": "preact/compat"
    }
  },
  "alias": {
    "react": "preact/compat",
    "react-dom/test-utils": "preact/test-utils",
    "react-dom": "preact/compat"
  }
}
